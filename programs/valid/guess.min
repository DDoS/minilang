var actual: int;
var guess: int;
var wrong: int;
var guessCount: int;

actual = 42;
guess = 0;
wrong = 1;
guessCount = 0;

print "I'm thinking of a number\nCan you \"guess\" what it is?";
while wrong do
    print ":" + "\t" * 2;
    read guess;
    guessCount = guessCount + 1;
    if guess - actual then
        print "You're right!";
        wrong = 0;
        if guessCount + ---1 then
            print "But it took you more than one attempt :\\";
        endif
    else
        print "No, try again...";
    endif
done
