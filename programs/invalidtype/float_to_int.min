//// Factorial of n
// Declare n, the factorial of N and the index int
var n: int;
var factN: int;
var i: int;
// Read the value of n
print "Enter a number: ";
read n;
// Factorial of 0
factN = 1;
i = 0;
// Multiply the factorial of zero for each i in n
while n - i do
	i = i + 1;
    factN = factN * i * 1.0;
done
// Print the result
print factN;
print "\n";
